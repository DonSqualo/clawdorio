[Unit]
Description=Clawdorio (local headless server)
After=network.target

[Service]
Type=simple
ExecStart=%h/.local/bin/clawdorio-server --host 127.0.0.1 --port 39333
Restart=on-failure
RestartSec=1

# Hardening (keep it lightweight; still debuggable).
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target

