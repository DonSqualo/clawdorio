[Unit]
Description=Clawdorio (local headless server)
After=network.target

[Service]
Type=simple
ExecStart=%h/.local/bin/clawdorio-server --host 0.0.0.0 --port 8787
Restart=on-failure
RestartSec=1

# Hardening (keep it lightweight; still debuggable).
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target
